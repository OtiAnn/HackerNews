<!DOCTYPE html>
<html>
  <head>
    <title>HackerNews | Wealthsimple</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="magazine">
    <header class="header">
      <%= render 'layouts/header' %>
    </header>
    <section class="container magazine-container">
      <%= yield %>
    </section>
    <footer class="container-full main-footer">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
